{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "helloworld", // "service name" (from when you deployed the container image)
          "region": "us-central1"
        }
      }
    ]
  }
}